<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding"
        app:layout_boxedEdges="all">

        <TextView
            android:id="@+id/topTextView"
            android:layout_width="140dp"
            android:layout_height="39dp"
            android:layout_marginTop="-5dp"
            android:gravity="center"
            android:text="@string/well_done"
            android:textSize="10sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent" />

        <ImageView
            android:id="@+id/upperBodyStretch2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FF9800"
            android:gravity="center"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <ImageView
            android:id="@+id/iliotibialBandStretch1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#009688"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView"
            app:layout_constraintTop_toTopOf="@+id/hamstringStretch2" />

        <ImageView
            android:id="@+id/hamstringStretch2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#E91E63"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView"
            app:layout_constraintTop_toTopOf="@+id/thighStretch2" />

        <ImageView
            android:id="@+id/thighStretch2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FF9800"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView"
            app:layout_constraintTop_toTopOf="@+id/calfStretch2" />

        <ImageView
            android:id="@+id/calfStretch2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#673AB7"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView"
            app:layout_constraintTop_toTopOf="@+id/hamstringStretch1" />

        <ImageView
            android:id="@+id/gluteStretch2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FF9800"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView"
            tools:src="@tools:sample/avatars[1]" />

        <ImageView
            android:id="@+id/hamstringStretch1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#4CAF50"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView"
            app:layout_constraintTop_toTopOf="@+id/calfStretch1" />

        <ImageView
            android:id="@+id/calfStretch1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00BCD4"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <ImageView
            android:id="@+id/lowerBackStretch2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#009688"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <ImageView
            android:id="@+id/iliotibialBandStretch2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFC107"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <ImageView
            android:id="@+id/upperBodyStretch1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#4CAF50"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <ImageView
            android:id="@+id/lowerBackStretch1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#2196F3"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <ImageView
            android:id="@+id/hipFlexor1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#EF0505"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <ImageView
            android:id="@+id/gluteStretch1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#9C27B0"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <ImageView
            android:id="@+id/hipFlexor2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#3F51B5"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <ImageView
            android:id="@+id/thighStretch1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#2196F3"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="invisible"
            app:layout_constraintLeft_toRightOf="@id/topTextView"
            app:layout_constraintRight_toLeftOf="@id/topTextView"
            app:layout_constraintTop_toBottomOf="@id/topTextView" />

        <Button
            android:id="@+id/button"
            android:layout_width="86dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/start_stretches"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/bottomTextView"
            android:layout_width="120dp"
            android:layout_height="17dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/empty"
            app:layout_constraintLeft_toRightOf="@id/calfStretch1"
            app:layout_constraintRight_toLeftOf="@id/calfStretch1"
            app:layout_constraintTop_toBottomOf="@id/calfStretch1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.wear.widget.BoxInsetLayout>